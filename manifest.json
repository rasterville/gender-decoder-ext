{
  "name": "Gender Decoder",
  "manifest_version": 2,
  "description": "This extension runs the selected text through the Gender Decoder created by Kat Matfield.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon_128x128.png",
    "default_popup": "popup.html",
    "default_title": "Click to gender decode!"
  },
  "permissions": [
    "contextMenus"
  ],
  "icons": {
    "16": "icon_16x16.png",
    "48": "icon_48x48.png",
    "128": "icon_128x128.png"
  },
  "background": {
    "scripts": ["popup.js"]
  }
}